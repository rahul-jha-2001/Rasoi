{
  "iss": "https://secure-gateway.example.com",   // who issued the token
  "aud": "https://api-grpc.example.com",         // who it’s intended for
  "iat": 1618886400,                             // issued-at
  "exp": 1618890000,                             // expiry

  "sub": "<firebase-uid>",                       // the unique Firebase user ID
  "type": "store",                               // one of: "store", "customer", "internal"
  "role": "admin",                               // for store: ["owner","admin","staff"], for customer: "customer"
  "stores": ["uuid-1","uuid-2"]                  // only for type="store", lists their store memberships
}

{
  "iss":"…", "aud":"…", "iat":…, "exp":…,
  "sub":"<firebase-uid>",
  "type":"customer",
  "role":"customer",
  "phone":"+15551234567",
  "name":"Jane Doe"
}
